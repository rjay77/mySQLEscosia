<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500" prefWidth="500" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mysqlescosia.AppController">
   <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;" AnchorPane.bottomAnchor="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
      <Label text="Sign Up" textFill="#27200d" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
      <GridPane hgap="10" vgap="12">
         <Label text="Username:" textFill="#27200d" style="-fx-font-size: 18px;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
         <TextField fx:id="txtUsernameField" promptText="Enter your username" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5px; -fx-padding: 5px;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

         <Label text="Email:" textFill="#27200d" style="-fx-font-size: 18px;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
         <TextField fx:id="txtEmailField" promptText="Enter your email address" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5px; -fx-padding: 5px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

         <Label text="Password:" textFill="#27200d" style="-fx-font-size: 18px;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
         <PasswordField fx:id="txtPasswordField" promptText="Enter your password" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 5px; -fx-padding: 5px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      </GridPane>

      <Button onAction="#onRegisterClick" text="Sign Up" textFill="#ffffff" style="-fx-background-color: #27200d; -fx-border-radius: 10px; -fx-font-size: 18px; -fx-font-weight: bold;" prefHeight="40" prefWidth="150">
         <cursor>
            <Cursor fx:constant="HAND"/>
         </cursor>
      </Button>
   </VBox>

   <Button fx:id="btnReturn" onAction="#onRegisterReturn" text="Back" textFill="#ffffff" style="-fx-background-color: #27200d; -fx-border-radius: 5px; -fx-font-size: 14px; -fx-font-weight: bold;" prefHeight="30" prefWidth="100" layoutX="380" layoutY="450">
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>

   <Label fx:id="lblStatus" textFill="#27200d" style="-fx-font-size: 16px;" wrapText="true" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.leftAnchor="10" />
</AnchorPane>
